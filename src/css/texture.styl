.{prefix}-media-layer-main
    color: silver;
    .{prefix}-media-load-btn
        display: inline-block;
        width: 100%;
        height: 100%;
        cursor: pointer;
        opacity: 0;
        position: absolute;
        left: 0;
        top: 0;
    .{prefix}-media-item
        display: inline-block;
        border:2px solid silver;
        border-radius:4px;
        text-align: center;
        vertical-align: middle;
        margin: 1px;
        .{prefix}-media-item-data
            display: table;
            width: 100%;
            height: 100%;
            position: relative;
            align-content: center;
            > div
                display: table-cell;
                text-align: center;
                vertical-align: middle;
    .{prefix}-media-button-frame,
    .{prefix}-media-load-frame
        display: table;
        position: relative;
        align-content: center;
        > div
            display: table-cell;
            text-align: center;
            vertical-align: middle;
            cursor: pointer;
            svg > use
                display: none;
            svg > use.normal
                display: block;
        > input:hover + div svg > use.hover
            display: block;
        > div:hover svg > use.hover
            display: block;
        > div.active svg > use.active
            display: block;

