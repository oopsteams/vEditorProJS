.{prefix}-media-layer-top
    display: flex;
    align-items: center;
    svg > use.active
        display: block;
.{prefix}-media-loading
    svg
      width: 60px;
.{prefix}-media-table
    display: table;
    .{prefix}-media-row
        display: table-row;
        position: relative;
    .{prefix}-media-cell
        display: table-cell;
        vertical-align: middle;
    .{prefix}-media-sub-table
        position: absolute;
        display: table;
        z-index: 2;
    .{prefix}-media-cell-table
        display: table;
    .{prefix}-media-range-value
        cursor: default;
        width: 40px;
        height: 18px;
        outline: none;
        border-radius: 2px;
        box-shadow: none;
        border: 1px solid #d5d5d5;
        text-align: center;
        background-color: #282828;
        color: silver;
        font-weight: lighter;
        vertical-align: baseline;

.{prefix}-media-selector
    display: inline-block;
    > select
        display: inline-block;
        width: 60px;
        height: 30px;
        padding: 0.1em 0.2em 0.1em 0.2em;
        vertical-align: middle;
        border: 1px solid #e9e9e9;  
        -moz-border-radius: 0.1em;
        -webkit-border-radius: 0.1em;
        border-radius: 0.1em;
        box-shadow: inset 0 0 2px #a0a0a0;
        -webkit-appearance: none;
        -moz-appearance: none;
        appearance: none;
        font-family: Arial,  Calibri, Tahoma, Verdana;
        font-size: 0.8em;
        color: #000099;
        cursor: pointer;
        background-color: #585858;
        > option
            font-size: 0.8em;
            padding: 0.1em 0.2em 0.1em 0.2em;
        > option[selected]
            font-weight:bold;
        > option:nth-child(even)
            color: #000099;
            background-color:#585858;
    > select:hover
        color: #101010;
        border: 1px solid #cdcdcd;
    > select:focus
        box-shadow: 0 0 2px 1px #404040;

.{prefix}-media-value
    cursor: default;
    width: 40px;
    height: 24px;
    outline: none;
    border-radius: 2px;
    box-shadow: none;
    border: 1px solid #d5d5d5;
    text-align: center;
    background-color: #1c1c1c;
    color: #fff;
    font-weight: lighter;
    vertical-align: baseline;
    font-family: 'Noto Sans', sans-serif;
    margin-top: 21px;
    margin-left: 4px;

.{prefix}-media-label
        display: inline-block;
        white-space: nowrap;

.{prefix}-media-icon
        width: 24px;
        height: 24px;
        > use
          display: block;

