left_menu_width = 50px;
body > textarea
    position: fixed !important;

+prefix-classes(prefix)
  .-container
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    min-height: 300px;
    height: 100%;
    position: relative;
    background-color: #282828;/*282828*/
    overflow: hidden;
    letter-spacing: 0.3px;
  
    div, ul, label, input, li
      box-sizing: border-box;
      -ms-user-select: none; 
      -moz-user-select: -moz-none;
      -khtml-user-select: none;
      -webkit-user-select: none;
      user-select: none;
    ul, label, input, li
      margin: 0;
      padding: 0;
  
    .-header
        /* BUTTON AND LOGO */
        /*min-width: 533px;*/
        position: inherit;
        display: flex;
        flex: 1 0;
        flex-direction: row;
        background-color: #151515;
        top: 0;
        width: 100%;
        .-main-controls
            display: table-cell;
            align-items: center;
            vertical-align: middle;
        .-header-btn
            display: table;
            vertical-align: middle;
    .-header-buttons,
    .-controls-buttons
        float: right;
        margin: 8px;

    .-header-logo,
    .-controls-logo
        float: left;
        width: 270px;
        padding-top: 7px;
    .-header-menu
        flex: auto;
        display: table;
        .-controls
            display: table-cell;
            vertical-align: middle;
    .-controls-buttons
        width: 270px;
        height: 100%;
        display: none;

    .-header-buttons button,
    .-header-buttons div,
    .-controls-buttons button,
    .-controls-buttons div
        display: inline-block;
        position: relative;
        width: 80px;
        height: 40px;
        padding: 0;
        line-height: 40px;
        outline: none;
        border-radius: 20px;
        border: 1px solid #ddd;
        font-family: 'Noto Sans', sans-serif;
        font-size: 12px;
        font-weight: bold;
        cursor: pointer;
        vertical-align: middle;
        letter-spacing: 0.3px;
        text-align: center;

    .-download-btn
        background-color: #fdba3b;
        border-color: #fdba3b;
        color: #fff;
    .-load-btn
        position: absolute;
        left: 0;
        right: 0;
        display: inline-block;
        top: 0;
        bottom: 0;
        width: 100%;
        cursor: pointer;
        opacity: 0;
    .-main-container
        display: table-cell;
        position: inherit;
        width: 100%;
        height: 100%;
        top: 0;
    .-main
        position: inherit;
        text-align: center;
        /* top: 64px; */
        width: 100%;
        height: 100%;
        bottom: 0;
        right: 0;
        left: 0;
    .-wrap
        position: inherit;
        bottom: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        .-size-wrap
            display: table;
            width: 100%;
            height: 100%
            .-align-wrap
                display: table-cell;
                vertical-align: middle;
    .
      position: relative;
      display: flex;
      width: 100%;
      height: 100%;
      text-align: center;
    .-media-layer,
    .-main-layer
      border-collapse: collapse;
      display: flex;
      flex: 1 0;
      width: 100%;
      height: 100%;
      flex-direction: column;
      .-layer-top
        width: 100%;
        height: 45px;
        border-bottom: 1px solid white;
        display: flex;
      .-layer-main
        width: 100%;
        height: 55%;
        min-height: 120px;
        border: 0px solid;
        display: flex;
        overflow: hidden;
        overflow-y: auto;
        flex-direction: row;
        .-layer-main-left
          /*height: 100%;*/
          width: left_menu_width;
          border: 0px solid;
        .-layer-main-mid
          /*height: 100%;*/
          width: "-webkit-calc(50% - %s)" % left_menu_width;
          width: "-moz-calc(50% - %s)" % left_menu_width;
          width: "calc(50% - %s)" % left_menu_width;
          border: 0px;
          overflow-x: auto;
          border-right: 1px solid white; 
        .-layer-main-right
          height: 100%;
          width: 50%;
          flex: auto;
          border: 0px solid purple;
          text-align: center;
          vertical-align: middle;
          display: table;
      .-layer-foot
        width: 100%;
        flex: auto;
        border-top: 1px solid white;
        position: relative;
    .-media-layer
        .-media-layer-top
            width: 100%;
            height: 45px;
            border: 0px solid green;
            display: flex;
            align-items: center;
        .-media-layer-main
            width: 100%;
            border: 0px solid blue;
            flex: auto;
            overflow-x: auto;

/* BIG MENU */
.{prefix}-container
    .{prefix}-menu, .{prefix}-help-menu, .{prefix}-main-menu, .{prefix}-track-menu
        width: auto;
        list-style: none;
        padding: 0;
        margin: 0 auto;
        display: table-cell;
        text-align: center;
        vertical-align: middle;
        white-space: nowrap;
        > .{prefix}-item
            position: relative;
            display: inline-block;
            border-radius: 2px;
            padding: 7px 8px 3px 8px;
            cursor: pointer;
            margin: 0;
            margin-right: 4px;
        > .{prefix}-item.tight
            padding: 0px;
            .svg_ic-menu
              height: 22px;
        > .{prefix}-item[tooltip-content]:hover
            &:before
                content: '';
                position: absolute;
                display: inline-block;
                margin: 0 auto 0;
                width: 0;
                height: 0;
                border-right: 7px solid transparent;
                border-top: 7px solid #2f2f2f;
                border-left: 7px solid transparent;
                left: 13px;
                top: -2px;
                z-index: 9999;
            &:after
                content: attr(tooltip-content);
                position: absolute;
                display: inline-block;
                background-color: #2f2f2f;
                color: #fff;
                padding: 5px 8px;
                font-size: 11px;
                font-weight: lighter;
                border-radius: 3px;
                max-height: 23px;
                top: -25px;
                left: 0;
                min-width: 24px;
                z-index: 9999;
        > .{prefix}-item.tight[tooltip-content]:hover
            &:before
              top: 21px;
              left: 4px;
            &:after
              top: 26px;
        > .{prefix}-item.active
            background-color: #F0F8FF;
            transition: all .3s ease;
        > .{prefix}-item.tight.active
            background-color: transparent;
    .{prefix}-wrap
        position: inherit;
    .{prefix}-canvas-container
        margin: auto;
    .{prefix}-layer-main-right
        .lower-canvas
            border: 0px dashed silver;

.{prefix}-menu
    svg > use
        display: none;
        margin: auto;
    svg > use.normal
        display: block;
    .{prefix}-newline[tooltip-content]:hover svg > use.hover
        display: block;
    .{prefix}-newline[tooltip-content].disabled svg > use.disabled
        display: block;
    .{prefix}-newline[tooltip-content].enabled svg > use.normal
        display: block;
    .{prefix}-newline
      position: relative;
      display: inline-block;
      border-radius: 2px;
      padding: 7px 8px 3px 8px;
      cursor: pointer;
      margin: 0;
      text-align: center;
      margin-right: 4px;
    .{prefix}-newline[tooltip-content]
      &:before
          left: 33px;
          top: 13px;
      &:after
          top: 8px;
          left: 41px;
          white-space: nowrap;
    .{prefix}-newline[tooltip-content].enabled:hover
        &:before
            content: '';
            position: absolute;
            display: inline-block;
            margin: 0 auto 0;
            width: 0;
            height: 0;
            border-right: 7px solid #2f2f2f;
            border-top: 7px solid transparent;
            border-bottom: 7px solid transparent;
            left: 33px;
            z-index: 9999;
        &:after
            content: attr(tooltip-content);
            position: absolute;
            display: inline-block;
            background-color: #2f2f2f;
            color: #fff;
            padding: 5px 5px;
            font-size: 11px;
            font-weight: lighter;
            border-radius: 3px;
            max-height: 23px;
            min-width: 24px;
            z-index: 9999;

